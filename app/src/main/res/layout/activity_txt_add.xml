<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:id="@+id/TxtWriteTop">
        <Button android:id="@+id/TxtAddBackBtn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/backbtn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加事件"
            android:textColor="#f5f5f5"
            android:layout_centerInParent="true"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <Button android:id="@+id/TxtAddKeepBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="#f5f5f5"
            android:layout_centerVertical="true"
            android:textSize="20dp"

            android:background="@drawable/keep"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />
    <TextView
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/writedate"
        android:background="@color/yellow"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TxtWriteTop"
        />

    <EditText android:id="@+id/edittext"
        android:textSize="18sp"

        android:textColor="@color/black"
        android:gravity="top"
        android:background="@color/yellow"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:lineSpacingExtra="3dp"
        android:layout_below="@+id/writedate"
         />

</RelativeLayout>