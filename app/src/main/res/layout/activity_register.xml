<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <Button android:id="@+id/RegisterBack"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/backbtn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="30dp"
            android:text="注册"
            android:textStyle="bold"
            android:textColor="#f5f5f5"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">


        <EditText android:id="@+id/RegisterUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:paddingBottom="10dp"
            android:hint="请输入用户名"
            android:inputType="text"
            android:textSize="20sp"
            android:textColorHint="#f5f5f5"
            android:paddingLeft="20dp"
            android:textColor="#f5f5f5"
            android:background="@drawable/shape2"
            android:drawableLeft="@drawable/my_normal"/>
        <EditText android:id="@+id/RegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:hint="请输入密码"
            android:password="true"
            android:textSize="20sp"
            android:textColorHint="#f5f5f5"
            android:paddingLeft="20dp"
            android:textColor="#f5f5f5"
            android:background="@drawable/shape2"
            android:drawableLeft="@android:drawable/ic_lock_lock" />
        <EditText android:id="@+id/RegisterPasswordSure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:hint="请再次输入密码"
            android:password="true"
            android:textSize="20sp"
            android:textColorHint="#f5f5f5"
            android:paddingLeft="20dp"
            android:textColor="#f5f5f5"

            android:background="@drawable/shape2"
            android:drawableLeft="@android:drawable/ic_lock_lock" />

        <Button android:id="@+id/RegisterRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape2"
            android:gravity="center"
            android:text="完成注册"
            android:textStyle="bold"
            android:textColor="#f5f5f5"
            android:textSize="20sp"/>

    </LinearLayout>
</RelativeLayout>